<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.hol.cgrapp.cooperativaguarairarepano.MainActivity"
    android:orientation="vertical"

    android:background="#1c1d26"
    android:padding="40sp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center_horizontal"
        android:id="@+id/profile_image"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:src="@drawable/taxicaracas"
        app:civ_border_width="2dp"
        app:civ_border_color="#1c1d26"
        android:layout_marginBottom="30sp"/>
    <Button
        android:background="@drawable/mybutton"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Soy un Conductor"
        android:id="@+id/driver"
        android:layout_marginBottom="20sp"/>

    <Button
        android:background="@drawable/mybutton"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Soy un Cliente"
        android:id="@+id/customer"
        />

</LinearLayout>
